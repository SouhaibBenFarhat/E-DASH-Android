<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shadow_allinone"
        android:orientation="horizontal"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_device_conf_aroma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:civ_border_color="@color/colorLightGray"
            app:civ_border_width="0.7dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <TextView
                android:id="@+id/tv_device_conf_aroma_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/defaultBlack"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_device_conf_aroma_manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inawera"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/defaultBlack"
                android:textSize="@dimen/small_text_size" />


        </LinearLayout>

        <Spinner
            android:id="@+id/sp_device_conf_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/defaultBlack"
            android:spinnerMode="dialog"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline">

        </Spinner>

        <EditText
            android:id="@+id/et_device_conf_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/roundedit"
            android:gravity="center"
            android:hint="000"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:padding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/defaultBlack"
            android:textColorHint="@color/defaultBlack"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="ml"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/defaultBlack"
            android:textSize="@dimen/small_text_size" />

    </LinearLayout>


    <ImageView

        android:id="@+id/btn_delete"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_margin="3dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="@color/colorPrimaryDark"
        />
</RelativeLayout>