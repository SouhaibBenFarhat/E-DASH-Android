<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow_allinone"
    android:orientation="horizontal"
    android:padding="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_aroma"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:civ_border_color="#D0D0D0"
        app:civ_border_width="0.7dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/tv_aroma_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Cubana"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/defaultBlack"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_aroma_manufacturer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Inawera"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/defaultBlack"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/tv_aroma_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@mipmap/rategray"
                android:drawablePadding="4dp"
                android:text="4 (6)"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/defaultBlack"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/tv_aroma_comments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.5"
                android:drawableLeft="@mipmap/commentgray"
                android:drawablePadding="4dp"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/defaultBlack"
                android:textSize="@dimen/small_text_size" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_aroma_category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
