                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:maxLines="1"
                                    android:padding="2dp"
                                    android:text="Taux"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                    android:textColor="#444"
