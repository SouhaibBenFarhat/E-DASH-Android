<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_custom_recipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mobile.esprit.sensor.AddCustomRecipeActivity.AddCustomRecipeActivity"
    tools:showIn="@layout/activity_add_custom_recipe">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#eeeeee">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_recipe_detail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="Details"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="#444"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_recipe_name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_edit_text"
                        android:fontFamily="Roboto"
                        android:hint="Recipe Name"
                        android:inputType="text"
                        android:letterSpacing="0.1"
                        android:paddingLeft="20dp"
                        android:textSize="@dimen/small_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:maxLines="2"
                            android:padding="2dp"
                            android:text="Amond"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:textColor="#444"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_recipe_volume"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity=""
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="2"
                            android:background="@drawable/round_edit_text"
                            android:fontFamily="Roboto"
                            android:hint=""
                            android:inputType="number"
                            android:letterSpacing="0.1"
                            android:paddingLeft="20dp"
                            android:textSize="@dimen/medium_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:maxLines="1"
                            android:padding="2dp"
                            android:text="ml"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:textColor="#444"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:padding="2dp"
                            android:text="Steep"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:textColor="#444"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_recipe_steep"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity=""
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="2"
                            android:background="@drawable/round_edit_text"
                            android:fontFamily="Roboto"
                            android:hint=""
                            android:inputType="number"
                            android:letterSpacing="0.1"
                            android:paddingLeft="20dp"
                            android:textSize="@dimen/medium_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:maxLines="1"
                            android:padding="2dp"
                            android:text="Day (s)"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:textColor="#444"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="normal" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D0D0D0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee">

                    <TextView
                        android:id="@+id/basetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="Base"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="#444"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/selectedBaseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/basetext"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="--"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="#444"
                        android:textSize="@dimen/small_text_size"
                        android:textStyle="normal" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_bases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/basetext"
                        android:layout_marginTop="5dp">


                    </android.support.v7.widget.RecyclerView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView

                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/nicotine_tag" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Nicotine"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="#444"
                                android:textSize="@dimen/medium_text_size"
                                android:textStyle="bold" />

                            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                                android:id="@+id/nicotine_progress"
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="3"
                                app:rcBackgroundColor="#ffffff"
                                app:rcBackgroundPadding="1dp" />

                            <TextView
                                android:id="@+id/base_nicotine"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="3mg"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="#444"
                                android:textSize="14sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D0D0D0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView

                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/pg_tag" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="PG"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="#444"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                                android:id="@+id/pg_progress"
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="3"
                                app:rcBackgroundColor="#ffffff"
                                app:rcBackgroundPadding="1dp" />

                            <TextView
                                android:id="@+id/base_pg"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="20"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="#444"
                                android:textSize="14sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D0D0D0" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView

                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/vd_tag" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="VG"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="#444"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                                android:id="@+id/vg_progress"
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="3"
                                app:rcBackgroundColor="#ffffff"
                                app:rcBackgroundPadding="1dp" />

                            <TextView
                                android:id="@+id/base_vg"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="20"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="#444"
                                android:textSize="14sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D0D0D0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView

                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/base" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:text="Taux"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="#444"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/et_base_volume"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/roundedit"
                                android:gravity="center"
                                android:hint="000"
                                android:inputType="numberDecimal"
                                android:maxLength="6"
                                android:padding="5dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="@color/defaultBlack"
                                android:textColorHint="@color/defaultBlack"
                                android:textSize="@dimen/small_text_size" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="ml"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="@color/defaultBlack"
                                android:textSize="@dimen/small_text_size" />


                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D0D0D0" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D0D0D0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#eeeeee">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="Aromas"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="#444"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_aroma_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/add_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/addaroma" />


                    <TextView
                        android:id="@+id/addArome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/add_icon"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="Add new Aroma"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="#444"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#D0D0D0" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#eeeeee">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="Selected Aromas"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="#444"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_aroma_icon" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">


                    <com.mobile.esprit.sensor.Utils.CustomListView
                        android:id="@+id/rv_selected_aromas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"></com.mobile.esprit.sensor.Utils.CustomListView>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#D0D0D0" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_category"
                        android:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/categori_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="Categories"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="#444"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/categori_text"
                        android:layout_margin="5dp"
                        android:layout_marginTop="5dp"></android.support.v7.widget.RecyclerView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="#ffffff">

                    <ImageButton
                        android:id="@+id/btn_check_composition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/white"
                        android:src="@drawable/ic_right_arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="Check Composition"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="#444"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold" />


                    <com.github.aakira.expandablelayout.ExpandableLinearLayout
                        android:id="@+id/expandableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_check_composition"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        app:ael_duration="1000"
                        app:ael_expanded="true">


                        <LinearLayout
                            android:id="@+id/check_composition_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/expandableLayout"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="2">


                                    <ImageView

                                        android:id="@+id/base_mobile_image"
                                        android:layout_width="110dp"
                                        android:layout_height="170dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/base2" />


                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="15dp"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="30dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="2dp"
                                                android:maxLines="1"
                                                android:padding="2dp"
                                                android:text="Total Base"
                                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                                android:textColor="#5a5a5a"
                                                android:textSize="@dimen/medium_text_size"
                                                android:textStyle="normal" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="2dp"
                                                android:maxLines="1"
                                                android:padding="2dp"
                                                android:text="PG/VG"
                                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                                android:textColor="#5a5a5a"
                                                android:textSize="@dimen/medium_text_size"
                                                android:textStyle="normal" />



                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="2dp"
                                                android:maxLines="2"
                                                android:padding="2dp"
                                                android:text="Total Aromas"
                                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                                android:textColor="#5a5a5a"
